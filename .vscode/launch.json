{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter Web (persistent prefs)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "debug",
      "args": [
        "-d",
        "web-server",
        "--web-port",
        "5050"
      ]
    },
    {
      "name": "Flutter Chrome (persistent profile)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "debug",
      "args": [
        "-d",
        "chrome",
        "--web-port",
        "5050",
        "--web-browser-flag=--user-data-dir=${workspaceFolder}/.chrome_profile"
      ]
    }
  ]
}
